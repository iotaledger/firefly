{
    "private": true,
    "workspaces": [
        "packages/desktop",
        "packages/shared",
        "packages/backend/bindings/node"
    ],
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^4.29.2",
        "@typescript-eslint/parser": "^4.29.2",
        "eslint": "^7.32.0",
        "eslint-plugin-svelte3": "^3.2.0",
        "husky": "^7.0.0",
        "patch-package": "^6.2.2",
        "prettier": "^2.3.2"
    },
    "scripts": {
        "format": "prettier -w **/*.{ts,js,json,scss,css}",
        "format-check": "prettier -c **/*.{ts,js,json,scss,css}",
        "lint-debug": "eslint . --cache",
        "lint:backend": "eslint packages/backend",
        "lint:desktop": "eslint packages/desktop",
        "lint:mobile": "eslint packages/mobile",
        "lint:shared": "eslint packages/shared",
        "postinstall": "patch-package",
        "pre-commit": "yarn format-check && yarn lint-debug",
        "prepare": "husky install"
    },
    "resolutions": {
        "lodash": ">=4.17.21"
    }
}
