{
    "private": true,
    "workspaces": [
        "packages/desktop",
        "packages/shared",
        "packages/backend/bindings/node"
    ],
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^4.29.2",
        "@typescript-eslint/parser": "^4.29.2",
        "eslint": "^7.32.0",
        "eslint-plugin-import": "^2.24.0",
        "eslint-plugin-svelte3": "^3.2.0",
        "husky": "^7.0.0",
        "patch-package": "^6.2.2",
        "prettier": "^2.3.2",
        "prettier-plugin-svelte": "^2.3.1"
    },
    "scripts": {
        "format": "prettier -w **/*.{svelte,ts,js,json,scss,css,md,yml}",
        "format-check": "prettier -c **/*.{svelte,ts,js,json,scss,css,md,yml}",
        "lint": "eslint . --cache",
        "lint:backend": "eslint packages/backend --cache",
        "lint:desktop": "eslint packages/desktop --cache",
        "lint:mobile": "eslint packages/mobile --cache",
        "lint:shared": "eslint packages/shared --cache",
        "postinstall": "patch-package",
        "pre-commit": "yarn format && yarn lint",
        "prepare": "husky install"
    },
    "resolutions": {
        "lodash": ">=4.17.21"
    }
}
