{
  "name": "desktop-wallet",
  "version": "1.0.0",
  "description": "IOTA wallet desktop",
  "main": "main.js",
  "repository": "git@github.com:iotaledger/new-wallet.git",
  "author": "IOTA Foundation <contact@iota.org>",
  "license": "Apache-2.0",
  "scripts": {
    "postinstall": "electron-build-env --electron 9.1.0 -- yarn build-binding",
    "build-binding": "node ./scripts/build-binding",
    "start": "npm-run-all -p start:dev start:electron",
    "start:dev": "NODE_ENV=development rollup --config --watch",
    "start:electron": "NODE_ENV=development electron electron/main.js",
    "build": "cross-env NODE_ENV=production rollup --config"
  },
  "dependencies": {
    "wallet-actor-system-nodejs-binding": "link:../../../backend/bindings/node"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^13.0.0",
    "@rollup/plugin-node-resolve": "^8.1.0",
    "cross-env": "^7.0.2",
    "electron": "^9.1.0",
    "electron-build-env": "^0.2.0",
    "npm-run-all": "^4.1.5",
    "rollup": "^2.21.0",
    "rollup-plugin-livereload": "^1.3.0",
    "rollup-plugin-serve": "^1.0.1",
    "rollup-plugin-svelte": "^5.2.3",
    "rollup-plugin-terser": "^6.1.0",
    "svelte": "^3.24.0"
  }
}
