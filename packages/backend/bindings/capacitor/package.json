{
  "name": "firefly-actor-system-capacitor-bindings",
  "version": "0.0.1",
  "description": "Capacitor bindings for Firefly's actor system",
  "main": "dist/esm/index.js",
  "module": "dist/esm/index.js",
  "files": [
    "android/src/main/",
    "android/build.gradle",
    "dist/",
    "ios/Plugin/",
    "FireflyActorSystemCapacitorBindings.podspec"
  ],
  "types": "dist/esm/index.d.ts",
  "scripts": {
    "verify": "npm run verify:ios && npm run verify:android && npm run verify:web",
    "verify:ios": "cd ios && pod install && xcodebuild -workspace Plugin.xcworkspace -scheme Plugin && cd ..",
    "verify:android": "cd android && ./gradlew clean build test && cd ..",
    "verify:web": "npm run build",
    "build": "node ./scripts/build.js",
    "build:bundle" : "rimraf ./dist && tsc && rollup -c rollup.config.js",
    "clean": "rimraf ./dist",
    "watch": "tsc --watch",
    "prepublishOnly": "npm run build",
    "preinstall": "npm run build"
  },
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/iotaledger/firefly.git"
  },
  "bugs": {
    "url": "https://github.com/iotaledger/firefly/issues"
  },
  "author": "IOTA Stiftung",
  "license": "MIT",
  "dependencies": {
    "@capacitor/core": "^3.4.0"
  },
  "devDependencies": {
    "@capacitor/android": "^3.4.1",
    "@capacitor/core": "^3.4.1",
    "@capacitor/ios": "^3.4.1",
    "@capacitor/docgen": "^0.0.10",
    "rimraf": "^3.0.2",
    "rollup": "^2.32.0",
    "typescript": "~4.0.3"
  },
  "peerDependencies": {
    "@capacitor/core": "^3.4.1"
  },
  "capacitor": {
    "ios": {
      "src": "ios"
    },
    "android": {
      "src": "android"
    }
  }
}
