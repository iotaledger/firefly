{
    "extends": "@tsconfig/svelte/tsconfig.json",
    "compilerOptions": {
        "allowJs": true,
        "baseUrl": ".",
        "isolatedModules": false,
        "importsNotUsedAsValues": "remove",
        "lib": ["DOM", "ESNext"],
        "paths": {
            "@common/*": ["../shared/lib/common/*"],
            "@core/*": ["../shared/lib/core/*"],
            "@lib/*": ["../shared/lib/*"]
        },
        "allowSyntheticDefaultImports": true
    },
    "include": ["./capacitor/**/*.ts"]
}
