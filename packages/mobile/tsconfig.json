{
    "extends": "@tsconfig/svelte/tsconfig.json",
    "compilerOptions": {
        "allowJs": true,
        "baseUrl": ".",
        "isolatedModules": false,
        "importsNotUsedAsValues": "remove",
        "lib": ["DOM", "ESNext"],
        "paths": {
            "@auxiliary/*": ["./lib/auxiliary/*"],
            "@contexts/*": ["../shared/lib/contexts/*"],
            "@components": ["./components"],
            "@core/*": ["../shared/lib/core/*"],
            "@features/*": ["./features/*"],
            "@lib/*": ["../shared/lib/*"],
            "@ui": ["../shared/components"],
            "@views": ["./views"]
        }
    },
    "include": ["./capacitor"]
}
