{
    "extends": "@tsconfig/svelte/tsconfig.json",
    "compilerOptions": {
        "allowJs": true,
        "baseUrl": ".",
        "isolatedModules": false,
        "lib": ["DOM", "ESNext"],
        "paths": {
            "@common/*": ["../shared/lib/common/*"],
            "@core/*": ["../shared/lib/core/*"]
        }
    },
    "include": ["./lib/**/*.ts", "../shared/lib/**/*.ts"]
}
