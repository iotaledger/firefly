{
    "name": "desktop",
    "productName": "Firefly",
    "version": "1.4.0-beta",
    "description": "Official IOTA wallet on desktop",
    "main": "public/build/main.js",
    "repository": "git@github.com:iotaledger/firefly.git",
    "author": "IOTA Foundation <contact@iota.org>",
    "license": "Apache-2.0",
    "scripts": {
        "start": "npm-run-all -p start:dev start:electron",
        "start:dev": "cross-env NODE_ENV=development PLATFORM=desktop webpack serve --content-base public",
        "start:electron": "cross-env NODE_ENV=development PLATFORM=desktop electron public/build/main.js",
        "start:electron-prod": "cross-env NODE_ENV=production PLATFORM=desktop electron public/build/main.js",
        "build": "yarn build:prod",
        "build:dev": "cross-env NODE_ENV=development PLATFORM=desktop webpack",
        "build:alpha": "cross-env NODE_ENV=production PLATFORM=desktop RELEASE=alpha webpack",
        "build:beta": "cross-env NODE_ENV=production PLATFORM=desktop RELEASE=beta webpack",
        "build:prod": "cross-env NODE_ENV=production PLATFORM=desktop RELEASE=prod webpack",
        "compile:beta:linux": "electron-builder --linux --x64 --config electron-builder-beta.config.json",
        "compile:beta:mac": "electron-builder --mac --x64 --config electron-builder-beta.config.json",
        "compile:beta:win": "electron-builder --win --x64 --config electron-builder-beta.config.json",
        "compile:prod:linux": "electron-builder --linux --x64 --config electron-builder-prod.config.json",
        "compile:prod:mac": "electron-builder --mac --x64 --config electron-builder-prod.config.json",
        "compile:prod:win": "electron-builder --win --x64 --config electron-builder-prod.config.json"
    },
    "dependencies": {
        "@ledgerhq/hw-transport-node-hid": "^5.13.0",
        "@ledgerhq/hw-transport-node-speculos": "^6.1.0",
        "@sentry/electron": "^2.5.4",
        "argon2": "^0.27.1",
        "electron-log": "^4.3.1",
        "electron-updater": "^4.3.5",
        "hw-app-iota": "0.6.5",
        "kdbxweb": "^1.14.4",
        "keytar": "^7.3.0",
        "node-machine-id": "^1.1.12",
        "shared": "0.0.0",
        "firefly-actor-system-nodejs-bindings": "0.1.0"
    },
    "devDependencies": {
        "@sentry/webpack-plugin": "^1.18.5",
        "@tsconfig/svelte": "^1.0.10",
        "@types/node": "^14.11.1",
        "copy-webpack-plugin": "^7.0.0",
        "cross-env": "^7.0.2",
        "css-loader": "^5.0.1",
        "electron": "11.5.0",
        "electron-builder": "^22.9.1",
        "electron-notarize": "^1.0.0",
        "mini-css-extract-plugin": "^1.3.5",
        "node-loader": "^1.0.2",
        "npm-run-all": "^4.1.5",
        "postcss-url": "^10.1.1",
        "ts-loader": "^8.0.4",
        "webpack": "^5.16.0",
        "webpack-cli": "^4.4.0",
        "webpack-dev-server": "^3.11.2"
    }
}
