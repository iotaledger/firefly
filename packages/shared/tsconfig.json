{
    "extends": "@tsconfig/svelte/tsconfig.json",
    "compilerOptions": {
        "baseUrl": "./",
        "importsNotUsedAsValues": "remove",
        "lib": ["DOM", "ESNext"],
        "moduleResolution": "node",
        "outDir": "out",
        "paths": {
            "@auxiliary/*": ["./lib/auxiliary/*"],
            "@common/*": ["./lib/common/*"],
            "@contexts/*": ["./lib/contexts/*"],
            "@core/*": ["./lib/core/*"],
            "@features/*": ["./features/*"],
            "@lib/*": ["./lib/*"]
        }
    },
    "include": ["./lib", "./features"],
    "exclude": ["**/node_modules", "**/tests"]
}
