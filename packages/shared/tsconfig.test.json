{
    "extends": "@tsconfig/svelte/tsconfig.json",
    "compilerOptions": {
        "baseUrl": "./",
        "importsNotUsedAsValues": "remove",
        "isolatedModules": false,
        "lib": ["DOM", "ESNext"],
        "paths": {
            "@auxiliary/*": ["./lib/auxiliary/*"],
            "@common/*": ["./lib/common/*"],
            "@contexts/*": ["./lib/contexts/*"],
            "@core/*": ["./lib/core/*"],
            "@lib/*": ["./lib/*"],
            "@mocks/*": ["./lib/tests/mocks/*"]
        },
        "types": ["jest"],
        "resolveJsonModule": true
    },
    "include": ["./lib"],
    "exclude": ["**/node_modules"]
}
